.container{
  padding:0px;
}
.list{
  padding:25px 25px 0 25px;
  margin-bottom:5px;
}
.text{
  padding:10px 10px 40px 10px;
  background-color:#f1f1f1;
  min-height:50px;
  color:#000;
  position:relative;
  z-index:99
}
.text video{
  width:100%;
  margin-top:10px;
}
.name{
  position:absolute;
  bottom:8px;
  left:40px;
  font-size: 14px;
  color:#e8a617
}
.time{
  position:absolute;
  bottom:8px;
  right:10px;
  font-size: 14px;
  color:#e8a617
}
.bq{
  border-bottom:1px solid #e1e1e1;
  height:90px
}
.left{
  clear:both;
  float:left;
  width:100px;
  height:70px;
  margin:10px 0 0 50px;
  text-align:center
}
.right{
  float:right;
  width:100px;
  height:70px;
  margin:10px 50px 0 0;
  text-align:center;
  
}
.left image,.right image{
  width:40px;
  height:40px
}
.tx{
  position:absolute;
  bottom:6px;
  left:10px;
  width:25px;
  height:25px;
  border-radius:15px
}
.dz{
  position:fixed;
  top:40%;
  right:0px;
  width:35px;
  height:35px;
  z-index:99999;
  display:block;
}
